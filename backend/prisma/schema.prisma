generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int   @id @default(autoincrement())
  externalId String   @unique @default(uuid())
  email     String   @unique
  password  String

  favorites FavoritePokemon[]
}

model FavoritePokemon {
  id  Int   @id @default(autoincrement())
  userId  Int
  pokemonApiId Int
  name String
  types FavoriteType[]
  stats PokemonFavoriteStat[]

  image  String

  user  User @relation(fields: [userId], references: [id])
  @@unique([userId, pokemonApiId])
}

model PokemonStat {
  id        Int   @id @default(autoincrement())
  name      String 
  value     Int

  favorites PokemonFavoriteStat[]
}

model PokemonType {
  id        Int   @id @default(autoincrement())
  name      String 

  favorites FavoriteType[]
}

model PokemonFavoriteStat {
  favoriteId Int
  statId     Int

  favorite FavoritePokemon @relation(fields: [favoriteId], references: [id], onDelete: Cascade)
  stat     PokemonStat @relation(fields: [statId], references: [id])

  @@id([favoriteId, statId])
}

model FavoriteType {
  favoriteId Int
  typeId     Int

  favorite FavoritePokemon @relation(fields: [favoriteId], references: [id], onDelete: Cascade)
  type     PokemonType @relation(fields: [typeId], references: [id])

  @@id([favoriteId, typeId])
}
